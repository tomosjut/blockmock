    "enabled": true,
    "amqpConfig": {
      "brokerType": "ARTEMIS",
      "host": "localhost",
      "port": 61616,
      "virtualHost": "/",
      "operation": "CONSUME",
      "exchangeName": "demo.notifications",
      "exchangeType": "FANOUT",
      "exchangeDurable": true,
      "exchangeAutoDelete": false,
      "queueName": "demo.notification.queue",
      "queueDurable": true,
      "queueExclusive": false,
      "queueAutoDelete": false,
      "routingKey": null,
      "bindingPattern": null,
      "username": "admin",
      "password": "admin",
      "mockMessageContent": "{\"notification_id\": \"NOTIF-567\", \"type\": \"email\", \"recipient\": \"user@example.com\", \"subject\": \"Your order has been shipped\", \"body\": \"Track your order at: https://tracking.example.com/ORD-12345\", \"sent_at\": \"2025-11-17T10:05:00Z\"}",
      "autoReply": false,
      "replyDelayMs": 0
    }
  },
  {
    "name": "Demo: IBM MQ Payment Gateway",
