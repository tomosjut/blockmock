      "success": true
    }
  },
  {
    "name": "Demo: RabbitMQ Order Processing",
    "description": "RabbitMQ queue die orders ontvangt en bevestigt (AMQP 0.9.1)",
    "protocol": "AMQP",
    "pattern": "REQUEST_REPLY",
    "enabled": true,
    "amqpConfig": {
      "brokerType": "RABBITMQ",
      "host": "localhost",
      "port": 5672,
      "virtualHost": "/",
      "operation": "CONSUME",
      "exchangeName": "demo.orders",
      "exchangeType": "TOPIC",
      "exchangeDurable": true,
      "exchangeAutoDelete": false,
      "queueName": "demo.order.processing",
      "queueDurable": true,
      "queueExclusive": false,
      "queueAutoDelete": false,
      "routingKey": "order.*",
      "bindingPattern": "order.*",
      "username": "guest",
      "password": "guest",
      "mockMessageContent": "{\"status\": \"order_confirmed\", \"order_id\": \"ORD-12345\", \"confirmation_number\": \"CONF-98765\", \"estimated_delivery\": \"2025-11-20\", \"timestamp\": \"2025-11-17T10:00:00Z\"}",
      "autoReply": true,
      "replyDelayMs": 100
    }
  },
